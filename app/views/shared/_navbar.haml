.navbar.navbar-inverse
  .container
    .navbar-header
      %button.navbar-toggle{ type: 'button', data: { toggle: 'collapse', target: '.navbar-inverse-collapse' } }
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Modern Library', '/', class: 'navbar-brand'
    .navbar-collapse.collapse.navbar-responsive-collapse
      %ul.nav.navbar-nav
        %li= link_to 'Home', '#'
        %li= link_to 'Search', '#'
        %li= link_to 'Cart', carts_path
        %li= link_to 'Contact', new_contact_request_path
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            Hi,
            = current_user.email
          %li= link_to 'Sign out', destroy_user_session_path, method: :delete
        - else
          %li= link_to 'Sign up', new_user_registration_path
          %li= link_to 'Sign in', new_user_session_path
        %li= link_to 'Admin', rails_admin_path
